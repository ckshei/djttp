<h1>DJTTP: Events</h1>
<%= current_user.display_name %>
<%= form_for @event do |f| %>
Name: <%= f.text_field :name %>
Date: <%= f.date_field :date %>
<%= f.hidden_field :host_id, :value=>@current_user.id %>
<%= f.submit %>
<% end %>

<% current_user.reservations.each do |event| %>
Name:<%=link_to(event.name, event_path(event)) %>
<br>
Date:<%= event.date %>
<br>
<%= link_to("edit", edit_event_path(event)) %>
<br>
<br>
<% end %>

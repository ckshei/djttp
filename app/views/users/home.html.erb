<%= current_user.display_name %>
<% if current_user.uid? %>
<%= form_for @event do |f| %>
Name: <%= f.text_field :name %>
Date: <%= f.date_field :date %>
<%= f.hidden_field :host_id, :value=>@current_user.id %>
<%= f.submit %>
<% end %>
<% else %>
  <br>
  <br>
  As a guest, you cannot host any events. Click <%= link_to("All Events", events_path) %> to RSVP for your first event. Otherwise create an account with spotify to host an event.
<% end %>

<% current_user.reservations.each do |event| %>
Name:<%=link_to(event.name, event_path(event)) %>
<br>
Date:<%= event.date %>
<br>
<%= link_to("edit", edit_event_path(event)) %>
<br>
<br>
<% end %>

